<mvc:View controllerName="com.quote.quotations.object.QuoteDetail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack" showHeader="false" floatingFooter="true" showFooter="true">
                    <content >

                        <core:Fragment fragmentName="com.quote.quotations.object.subsections.QuoteDetailHeader" type="XML"/>
                        <core:Fragment fragmentName="com.quote.quotations.object.subsections.QuoteDetailHeaderMid" type="XML"/>
                        <core:Fragment fragmentName="com.quote.quotations.object.subsections.QuoteDetailItem" type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar id="otbFooter">
                            <!-- <Button id="idMessagePopOver" icon="sap-icon://alert" text="{=${message>/}.length}" visible="{=${message>/}.length > 0}" type="Emphasized" press="onMessagePopoverPress"></Button> -->
                            <ToolbarSpacer/>
                            <Button type="Accept" text="Submit" press="onSubmitQuote">
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                                </layoutData>
                            </Button>
                            <Button text="Cancel" press="onCancelQuote">
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>